                },
                "adminID": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "unitNumber": {
                    "type": "integer"
                }
            }
        },
        "dto.AuthResponse": {
